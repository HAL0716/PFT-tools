# EditorConfig is awesome: https://EditorConfig.org
# top-most EditorConfig file
root = true

# すべてのファイルに適用
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# C++ ソースコードファイル
[*.cpp]
indent_style = space
indent_size = 4

# C++ ヘッダーファイル
[*.hpp]
indent_style = space
indent_size = 4

# JSON ファイル
[*.json]
indent_style = space
indent_size = 2

# CMakeLists.txt ファイル
[CMakeLists.txt]
indent_style = space
indent_size = 2
